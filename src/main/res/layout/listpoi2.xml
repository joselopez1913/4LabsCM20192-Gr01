<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagePOI2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/atanasio"/>

    <TextView
        android:id="@+id/txt11"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:text="Sitio"
        android:textColor="#D8382A"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/imagePOI2"
        />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/txt11"
        android:layout_alignLeft="@+id/txt11"
        android:gravity="center"/>


    <TextView
        android:id="@+id/txt22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:textSize="18sp"
        android:layout_below="@+id/textView22"
        android:layout_alignLeft="@+id/textView22"
        android:gravity="center"/>


    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntuación"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/txt22"
        android:layout_alignLeft="@+id/txt22"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntuacion"
        android:textColor="#1A34C7"
        android:textSize="20sp"
        android:layout_below="@+id/textView32"
        android:layout_alignLeft="@+id/textView32"
        android:gravity="center"/>
</RelativeLayout>